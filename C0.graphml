<?xml version="1.0" encoding="UTF-8"?>
<graphml xmlns="http://graphml.graphdrawing.org/xmlns"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://graphml.graphdrawing.org/xmlns
         http://graphml.graphdrawing.org/xmlns/1.0/graphml.xsd">

  <!-- proste klucze na label dla node/edge -->
  <key id="d0" for="node" attr.name="label" attr.type="string"/>
  <key id="d1" for="edge" attr.name="label" attr.type="string"/>

  <graph id="DES_Context" edgedefault="directed">

    <!-- Węzły (C4 System Context) -->

    <node id="n0">
      <data key="d0">DES Archival Service</data>
    </node>

    <node id="n1">
      <data key="d0">Client Systems</data>
    </node>

    <node id="n2">
      <data key="d0">Buffer Object Storage (S3/HCP)</data>
    </node>

    <node id="n3">
      <data key="d0">Archive Object Storage (S3/HCP)</data>
    </node>

    <node id="n4">
      <data key="d0">Metadata Database</data>
    </node>

    <node id="n5">
      <data key="d0">Operations / Admin</data>
    </node>

    <!-- Relacje -->

    <!-- Client Systems -> DES Archival Service -->
    <edge id="e0" source="n1" target="n0">
      <data key="d1">Sends references to buffer files</data>
    </edge>

    <!-- DES -> Buffer Object Storage -->
    <edge id="e1" source="n0" target="n2">
      <data key="d1">Reads raw files</data>
    </edge>

    <!-- DES -> Archive Object Storage -->
    <edge id="e2" source="n0" target="n3">
      <data key="d1">Writes/reads DES containers</data>
    </edge>

    <!-- DES -> Metadata Database -->
    <edge id="e3" source="n0" target="n4">
      <data key="d1">Reads/writes metadata &amp; status</data>
    </edge>

    <!-- Operations/Admin -> DES -->
    <edge id="e4" source="n5" target="n0">
      <data key="d1">Monitoring &amp; control</data>
    </edge>

  </graph>
</graphml>
